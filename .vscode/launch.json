  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web App",
      "type": "debugpy",
      "request": "launch",
      "module": "memorybank.ui.app",
      "args": ["-Xfrozen_modules=off"],
      "justMyCode": false
    },

    {
      "name": "API",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["memorybank.server.app:app", "--reload", "--port", "7001"],
      "jinja": true,
      "justMyCode": false
    }
  ]
}
